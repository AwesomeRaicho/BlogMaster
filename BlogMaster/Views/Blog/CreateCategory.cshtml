
@{
    Layout = "~/Views/Shared/_AdministratorLayout.cshtml";
}


    <div class="container">
      <form 
        class="p-4 mt-5 m-auto border rounded-4 bg-light"
        style="max-width: 500px"
        method="post"
      >
        <div class="mb-3">
          <label for="CategoryNameEn" class="form-label"
            >Category Name </label
          >
            <input type="text" class="form-control" id="CategoryNameEn" name="CategoryNameEn" value="@(ViewBag.CategoryNameEn == null ? "" : ViewBag.CategoryNameEn)" />
        </div>
        @if (ViewBag.CategoryId != null)
        {
            <input type="hidden" name="CategoryId" value="@(ViewBag.CategoryId)" hidden />
        }
        <button type="submit" class="btn btn-primary">@(ViewBag.CategoryId == null ? "Create" : "Update")</button>
        @if (ViewBag.CategoryId != null)
        {
            <div class="d-flex justify-content-end">

                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deletemodal">
                    Delete Tag
                </button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="deletemodal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="ModalLabel">Deleting Category</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this category?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Don´t Delete </button>
                            <a href="/delete-category?categoryId=@(ViewBag.CategoryId)&slug=@(ViewBag.Slug)" class="btn btn-danger">Yes, Delete Category</a>
                        </div>
                    </div>
                </div>
            </div>
        }
      </form>
    </div>