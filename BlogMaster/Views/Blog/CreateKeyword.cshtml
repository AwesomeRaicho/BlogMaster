@{
    Layout = "~/Views/Shared/_AdministratorLayout.cshtml";
}


<div class="container">
    <form class="p-4 mt-5 m-auto border rounded-4 bg-light"
          style="max-width: 500px"
          method="post">

        <div class="mb-3">
            <label for="KeywordNameEn" class="form-label">Keyword Name </label>
            <input type="text" class="form-control" id="KeywordNameEn" name="KeywordNameEn" value="@(ViewBag.KeywordNameEn == null ? "" : ViewBag.KeywordNameEn)" required/>
        </div>

        @if (ViewBag.KeywordId != null)
        {
            <input name="KeywordId" value="@(ViewBag.KeywordId)" hidden />
        }

        <button type="submit" class="btn btn-primary">@(ViewBag.KeywordId == null ? "Create" : "Update")</button>

        @if (ViewBag.KeywordId != null)
        {
            <div class="d-flex justify-content-end">

                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deletemodal">
                    Delete Keyword
                </button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="deletemodal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="ModalLabel">Deleting Keyword</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this Keyword?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Don´t Delete </button>
                            <a href="/delete-keyword?keywordId=@(ViewBag.KeywordId)" class="btn btn-danger">Yes, Delete Keyword</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </form>
</div>
